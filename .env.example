# Hyperliquid API Configuration
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
HYPERLIQUID_ACCOUNT_ADDRESS=your_account_address_here

# Strategy Configuration
FUNDING_RATE_THRESHOLD=0.0001  # Minimum funding rate to enter position (0.01%)
REBALANCE_THRESHOLD=0.05  # Rebalance when delta exceeds 5%
MAX_POSITION_SIZE_USD=10000  # Maximum position size per asset
